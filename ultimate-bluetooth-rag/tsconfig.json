{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "types": [
      "@cloudflare/workers-types",
      "node"
    ],
    "lib": ["ES2022", "WebWorker"]
  },
  "include": ["src", "scripts"],
  "exclude": ["node_modules", "dist"]
} 